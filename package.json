{
  "name": "draftforge",
  "displayName": "DraftForge",
  "description": "Write, review, refine and submit Internet-Drafts",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Linters",
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "draftforge.checkPlaceholders",
        "title": "Check for common placeholders"
      },
      {
        "command": "draftforge.idnits",
        "title": "Run idnits on document"
      },
      {
        "command": "draftforge.login",
        "title": "Login with an IETF Account"
      },
      {
        "command": "draftforge.register",
        "title": "Create an IETF Account"
      },
      {
        "command": "draftforge.runAllChecks",
        "title": "Run All Checks",
        "icon": "$(run-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "draftforge.runAllChecks",
          "when": "view == draftforge-checks",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "draftforge",
          "title": "IETF DraftForge",
          "icon": "media/icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "draftforge-setup",
        "contents": "In order to use online features, you must connect your IETF account.\n[Login with an IETF Account](command:draftforge.login)\n[Create an IETF Account](command:draftforge.register)\nFor questions and bug reports, [open an issue](https://github.com/ietf-tools/draftforge/issues) on the IETF DraftForge GitHub repository or send an email to support@ietf.org."
      }
    ],
    "views": {
      "draftforge": [
        {
          "id": "draftforge-setup",
          "name": "Setup",
          "when": "!draftforge.isSetup"
        },
        {
          "id": "draftforge-checks",
          "name": "Validation Checks"
        },
        {
          "id": "draftforge-tools",
          "name": "Tools"
        },
        {
          "id": "draftforge-snippets",
          "name": "Snippets"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "1.106.1",
    "@vscode/test-cli": "0.0.12",
    "@vscode/test-electron": "2.5.2",
    "eslint": "9.39.1"
  },
  "dependencies": {
    "@ietf-tools/idnits": "3.0.0-alpha.70"
  }
}
