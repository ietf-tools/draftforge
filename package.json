{
  "name": "draftforge",
  "displayName": "DraftForge",
  "description": "Write, review, refine and submit Internet-Drafts",
  "version": "0.0.1",
  "type": "module",
  "publisher": "ietf",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ietf-tools/draftforge-ext.git"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Linters",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "drafts",
    "internet-drafts",
    "ietf",
    "rfc-editor",
    "rfc"
  ],
  "preview": true,
  "pricing": "Free",
  "icon": "media/logo.png",
  "galleryBanner": {
    "color": "#8D0E2E",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "title": "Internet Draft - Markdown",
        "shortTitle": "Internet Draft - Markdown",
        "command": "draftforge.newFileMarkdown"
      },
      {
        "title": "Internet Draft - XML",
        "shortTitle": "Internet Draft - XML",
        "command": "draftforge.newFileXml"
      },
      {
        "command": "draftforge.checkArticles",
        "title": "Check for bad article usage"
      },
      {
        "command": "draftforge.checkPlaceholders",
        "title": "Check for common placeholders"
      },
      {
        "command": "draftforge.idnits",
        "title": "Run idnits on document"
      },
      {
        "command": "draftforge.login",
        "title": "Login with an IETF Account"
      },
      {
        "command": "draftforge.register",
        "title": "Create an IETF Account"
      },
      {
        "command": "draftforge.runAllChecks",
        "title": "Run All Checks",
        "icon": "$(run-all)"
      }
    ],
    "menus": {
      "file/newFile": [
        {
          "command": "draftforge.newFileMarkdown"
        },
        {
          "command": "draftforge.newFileXml"
        }
      ],
      "view/title": [
        {
          "command": "draftforge.runAllChecks",
          "when": "view == draftforge-checks",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "IETF DraftForge",
      "properties": {
        "draftforge.experience": {
          "type": "string",
          "enum": [
            "author",
            "rpc"
          ],
          "enumItemLabels": [
            "Author",
            "RPC staff"
          ],
          "markdownEnumDescriptions": [
            "Author-centric experience",
            "RFC Production Center staff-centric experience"
          ],
          "default": "author",
          "description": "The presentation experience"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "draftforge",
          "title": "IETF DraftForge",
          "icon": "media/icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "draftforge-loading",
        "contents": "$(loading~spin) Initializing..."
      }
    ],
    "views": {
      "draftforge": [
        {
          "id": "draftforge-loading",
          "name": "IETF DraftForge",
          "when": "!draftforge.isReady"
        },
        {
          "id": "draftforge-checks",
          "name": "Validation Checks",
          "when": "draftforge.isReady"
        },
        {
          "id": "draftforge-tools",
          "name": "Tools",
          "when": "draftforge.isReady"
        },
        {
          "id": "draftforge-snippets",
          "name": "Snippets",
          "when": "draftforge.isReady"
        }
      ]
    },
    "walkthroughs": [
      {
        "id": "draftforge",
        "title": "IETF DraftForge Setup",
        "description": "Getting Started",
        "steps": [
          {
            "id": "runcommand",
            "title": "Run Command",
            "description": "This step will run a command and check off once it has been run.\n[Run Command](command:draftforge.checkPlaceholders)",
            "completionEvents": [
              "onCommand:draftforge.checkPlaceholders"
            ]
          },
          {
            "id": "draftforgelogin",
            "title": "Login",
            "description": "Yes yes yes"
          },
          {
            "id": "linux",
            "title": "UI Platform: Linux",
            "description": "This step will only show on Linux"
          }
        ]
      }
    ]
  },
  "scripts": {
    "compile": "rollup -c rollup.config.mjs",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "29.0.0",
    "@rollup/plugin-node-resolve": "16.0.3",
    "@types/mocha": "10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "1.106.1",
    "@vscode/test-cli": "0.0.12",
    "@vscode/test-electron": "2.5.2",
    "eslint": "9.39.1",
    "rollup": "4.53.3"
  },
  "dependencies": {
    "@ietf-tools/idnits": "3.0.0-alpha.70",
    "lodash-es": "4.17.21"
  }
}
