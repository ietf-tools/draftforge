{
  "name": "draftforge",
  "displayName": "DraftForge",
  "description": "Write, review, refine and submit Internet-Drafts",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Linters",
    "Formatters",
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
				"title": "Internet Draft - Markdown",
				"shortTitle": "Internet Draft - Markdown",
				"command": "draftforge.newFileMarkdown"
			},
      {
				"title": "Internet Draft - XML",
				"shortTitle": "Internet Draft - XML",
				"command": "draftforge.newFileXml"
			},
      {
        "command": "draftforge.checkPlaceholders",
        "title": "Check for common placeholders"
      },
      {
        "command": "draftforge.idnits",
        "title": "Run idnits on document"
      },
      {
        "command": "draftforge.login",
        "title": "Login with an IETF Account"
      },
      {
        "command": "draftforge.register",
        "title": "Create an IETF Account"
      },
      {
        "command": "draftforge.runAllChecks",
        "title": "Run All Checks",
        "icon": "$(run-all)"
      }
    ],
    "menus": {
      "file/newFile": [
        {
					"command": "draftforge.newFileMarkdown"
				},
				{
					"command": "draftforge.newFileXml"
				}
			],
      "view/title": [
        {
          "command": "draftforge.runAllChecks",
          "when": "view == draftforge-checks",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "draftforge",
          "title": "IETF DraftForge",
          "icon": "media/icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "draftforge-loading",
        "contents": "$(loading~spin) Initializing..."
      }
    ],
    "views": {
      "draftforge": [
        {
          "id": "draftforge-loading",
          "name": "IETF DraftForge",
          "when": "!draftforge.isReady"
        },
        {
          "id": "draftforge-checks",
          "name": "Validation Checks",
          "when": "draftforge.isReady"
        },
        {
          "id": "draftforge-tools",
          "name": "Tools",
          "when": "draftforge.isReady"
        },
        {
          "id": "draftforge-snippets",
          "name": "Snippets",
          "when": "draftforge.isReady"
        }
      ]
    },
    "walkthroughs": [
      {
        "id": "draftforge",
        "title": "IETF DraftForge Setup",
        "description": "Getting Started",
        "steps": [
          {
						"id": "runcommand",
						"title": "Run Command",
						"description": "This step will run a command and check off once it has been run.\n[Run Command](command:draftforge.checkPlaceholders)",
						"completionEvents": [
							"onCommand:draftforge.checkPlaceholders"
						]
					},
          {
            "id": "draftforgelogin",
            "title": "Login",
            "description": "Yes yes yes"
          },
          {
						"id": "linux",
						"title": "UI Platform: Linux",
						"description": "This step will only show on Linux"
					}
        ]
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "1.106.1",
    "@vscode/test-cli": "0.0.12",
    "@vscode/test-electron": "2.5.2",
    "eslint": "9.39.1"
  },
  "dependencies": {
    "@ietf-tools/idnits": "3.0.0-alpha.70"
  }
}
